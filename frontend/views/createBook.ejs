<%- include('partials/header') %>
<%- include('partials/nav') %>

<main>
  <h1>Create a New Book</h1>
  <div class="create-book-form">
    <form action="/api/books" method="POST">
      <label for="name">Create Name</label>
      <input type="text" id="name" name="name" placeholder="Name" required>
      <label for="author">Create Author</label>
      <input type="text" id="author" name="author" placeholder="Author" required>
      <label for="title">Create Title</label>
      <textarea type="text" id="title" name="title" placeholder="Title" required></textarea>
      <label for="price">Create Price</label>
      <input type="number" id="price" name="price" placeholder="Price" step="0.01" required>
      <button type="submit">Create</button>
    </form>
  </div>
</main>

